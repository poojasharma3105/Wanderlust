<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3"> 
    <div class="col-6 offset-3">
        <body>
            <h1>Login</h1>
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input 
                       name="username"
                       id="username"  
                       type ="text" 
                       class="form-control"
                       required
                    />
                </div>
    
                <div class="mb-3">
                    <lable for="password" class="form-label">Password</lable>
                    <input 
                       name="password"
                       id="password"  
                       type ="password" 
                       class="form-control"
                       required
                    />
                </div>
                <button class="btn btn-success mt-3 mb-3">Login</button>
            </form>
        </body>
    </div>
</div>