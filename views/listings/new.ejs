<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br>
        <body>
            <h3>Create a New Listing</h3>
            <form 
              method="post" 
              action="/listings" 
              novalidate class="needs-validation" 
              enctype="multipart/form-data"
            >
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input 
                       name="listing[title]" 
                       placeholder="Add a catchy title" 
                       type ="text" 
                       class="form-control"
                       required
                    />
                    <div class="valid-feedback">Title looks good</div>
                </div>
                
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea 
                       name="listing[description]" 
                       type ="text"
                       class="form-control"
                       required
                    ></textarea>
                    <div class="invalid-feedback">Price should be valid</div>
                </div>
        
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Listing Image</lable>
                    <input 
                       name="listing[image]" 
                       type ="file" 
                       class="form-control"
                       required
                    />
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input 
                           name="listing[price]" 
                           placeholder="1200" 
                           type ="number" 
                           class="form-control"
                           required
                        />
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input 
                           name="listing[country]" 
                           placeholder="India" 
                           type ="text" 
                           class="form-control"
                           required
                        />
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input 
                       name="listing[location]" 
                       placeholder="Jaipur, Rajasthan" 
                       type ="text" 
                       class="form-control"
                       required
                    />
                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <div class="mb-3">
                    <label for="categories" class="form-label">Categories</label>
                    <select class="form-select" name="listing[categories][]" id="categories" multiple required>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                </div>
                
                
                
                <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
                
            </form>
        </body>
    </div>
</div>